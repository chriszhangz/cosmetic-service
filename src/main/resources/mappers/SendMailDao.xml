<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cosmetic.dao.SendMailDao">
<resultMap id="BaseResultMap" type="com.cosmetic.entity.Sendmail" >
    <id column="rec_id" property="rec_id" jdbcType="INTEGER" />
    <result column="status" property="status" jdbcType="INTEGER" />
    <result column="mail_to" property="mail_to" jdbcType="VARCHAR" />
    <result column="mail_category" property="mail_category" jdbcType="VARCHAR" />
    <result column="mail_title" property="mail_title" jdbcType="VARCHAR" />
    <result column="user_name" property="user_name" jdbcType="VARCHAR" />
    <result column="content" property="content" jdbcType="VARCHAR" />
    <result column="send_time" property="send_time" jdbcType="INTEGER" />
  </resultMap>

  <insert id="insert" parameterType="com.cosmetic.entity.Sendmail" >
    insert into shu_mail (status, mail_to, mail_category, 
      mail_title, user_name, content, 
      send_time
      )
    values (#{status,jdbcType=INTEGER}, #{mail_to,jdbcType=VARCHAR}, #{mail_category,jdbcType=VARCHAR}, 
      #{mail_title,jdbcType=VARCHAR}, #{user_name,jdbcType=VARCHAR}, #{content,jdbcType=VARCHAR}, 
      #{send_time,jdbcType=INTEGER}
      )
  </insert>
  <select id="selectEmailList" parameterType="map" resultType="com.cosmetic.entity.Sendmail">
     select * from shu_mail where send_time &lt;= #{send_time}
     	<if test="status != null">
			and status= #{status} 
		</if>
  </select>
  <select id="selectEmail" parameterType="int" resultType="com.cosmetic.entity.Sendmail">
     select * from shu_mail where rec_id = #{rec_id}
  </select>
   
	
	  		
</mapper>
